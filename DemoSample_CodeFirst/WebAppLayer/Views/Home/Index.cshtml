@model DataContextLayer.Models.Users

@{
    ViewData["Title"] = "Home Page";
}

<h2>Sample Demo of Entity Framework Core </h2>

 <div class="row vertical-offset-100">
    	<div class="col-md-4 col-md-offset-4">
    		<div class="panel panel-default">
			  	<div class="panel-heading">
			    	<h3 class="panel-title">Please sign in</h3>
			 	</div>
			  	<div class="panel-body">
			    	<form asp-action="Index">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="UserId" class="form-control" />
                    <fieldset>
			    	  	<div class="form-group">
			    		    <input asp-for="UserName" class="form-control" placeholder="Username" name="Username" type="text">
                            <span asp-validation-for="UserName" class="text-danger"></span>
			    		</div>
			    		<div class="form-group">
			    			<input asp-for="Password" class="form-control" placeholder="Password" name="password" type="password" value="">
                            <span asp-validation-for="Password" class="text-danger"></span>
			    		</div>
			    		<div class="checkbox">
			    	    	<label>
			    	    		<input name="remember" type="checkbox" value="Remember Me"> Remember Me
			    	    	</label>
			    	    </div>
			    		<input class="btn btn-lg btn-success btn-block" type="submit" value="Login">
			    	</fieldset>
			      	</form>
          
			    </div>
			</div>
		</div>
	</div>